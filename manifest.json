{
  "name": "EdIt",
  "description": "Edit every webpage!",
  "version": "0.1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "/popup/popup.html",
    "default_icon": {
      "16": "/images/editico16.png",
      "32": "/images/editico32.png",
      "48": "/images/editico48.png",
      "128": "/images/editico128.png"
    }
  },
  "icons": {
    "16": "/images/editico16.png",
    "32": "/images/editico32.png",
    "48": "/images/editico48.png",
    "128": "/images/editico128.png"
  }
}